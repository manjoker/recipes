{% extends 'base.html.twig' %} {% block title %}Recettes | Recipe{% endblock %} {% block body %}

<h1 class="h4 mt-4">Liste des recettes</h1>

<h5>
    <div class="count mt-4">
        Il y a
        <span class="badge bg-primary">{{ recipes.getTotalItemCount }}</span> recettes dans la liste.
    </div>
</h5>

<a href="{{path('app_recipe_new')}}" class="btn btn-primary mt-4">Nouvelle recette</a>


<div class="row mt-5">
    {% for recipe in recipes %}
    <div class="col-sm-6 col-md-4 col-lg-4 mt-2">
        <div class="card mb-3">
            <h3 class="card-header">{{recipe.name}}</h3>
            <div>
                <a href="{{path('app_recipe_edit', {'id': recipe.id})}}"><i class="fa fa-pencil-square"
                        aria-hidden="true"></i></a> | <a href="{{path('app_recipe_delete', {'id': recipe.id})}}"><i
                        class="fa fa-trash" aria-hidden="true"></i></a>
            </div>
            <img src="https://picsum.photos/200" alt="">
            <div class="card-body">
                <p class="card-text">{{recipe.description}}</p>
                <div>
                    <p>Liste des ingrédients</p>
                    {% for ingredient in recipe.ingredients %}
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ingredient.name}}
                            <span class="badge bg-primary rounded-pill">14</span>
                        </li>
                    </ul>
                    {% endfor %}
                </div>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Temps : {{recipe.time}}</li>
                <li class="list-group-item">Difficulté : {{recipe.difficulty}}</li>
                <li class="list-group-item">Prix : {{recipe.price}}</li>
            </ul>
        </div>

    </div>
    {% endfor %}
</div>

<div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(recipes) }}
</div>

{% endblock %}